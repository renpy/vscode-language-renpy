// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "package",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "source": "webpack-ts-checker",
        "applyTo": "allDocuments",
        "pattern": [
          {
            "regexp": "(ERROR|WARNING) in (.*?):(\\d+):(\\d+)",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4
          },
          {
            "regexp": "\\s*TS(\\d+):\\s*(.*)$",
            "code": 1,
            "message": 2
          }
        ]
      },
      "presentation": {
        "reveal": "never",
        "clear": true,
        "close": true
      },
      "group": "build"
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "source": "webpack-ts-checker",
        "applyTo": "allDocuments",
        "pattern": [
          {
            "regexp": "(ERROR|WARNING) in (.*?):(\\d+):(\\d+)",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4
          },
          {
            "regexp": "\\s*TS(\\d+):\\s*(.*)$",
            "code": 1,
            "message": 2
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^Type-checking in progress|[Cc]ompiled (?:.*?successfully|with .*?(?:error|warning))"
          },
          "endsPattern": {
            "regexp": "^Found \\d+ (?:error|warning)|^No typescript errors found"
          }
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "clear": true,
        "close": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch:release",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "source": "webpack-ts-checker",
        "applyTo": "allDocuments",
        "pattern": [
          {
            "regexp": "(ERROR|WARNING) in (.*?):(\\d+):(\\d+)",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4
          },
          {
            "regexp": "\\s*TS(\\d+):\\s*(.*)$",
            "code": 1,
            "message": 2
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^asset|cached"
          },
          "endsPattern": {
            "regexp": "[Cc]ompiled (?:.*?successfully|with .*?(?:error|warning))"
          }
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "clear": true,
        "close": true
      },
      "group": "build"
    },
    {
      "type": "npm",
      "script": "lint",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}
